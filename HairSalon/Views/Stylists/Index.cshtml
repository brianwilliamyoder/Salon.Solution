@{
  Layout = "_Layout";
}

@using HairSalon.Models;

<h1>Available Stylists</h1>

@if (@Model.Count == 0)
{
  <h3>No Stylists in database. Please add at least one stylist to begin assigning clients.</h3>
}

<ul>
  @foreach(Stylist stylist in Model)
  {
    <li>@Html.ActionLink($"{stylist.StylistName}", "Details", new { id = stylist.StylistId })</li>
  }
  </ul>

  <p>@Html.ActionLink("Add a new stylist", "Create", "Stylists")</p